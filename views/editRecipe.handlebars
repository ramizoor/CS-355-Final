<h2>Edit Recipe</h2>

<form method="POST" action="/recipes/{{recipe.id}}/edit">
  <input type="text" name="title" value="{{recipe.title}}" required><br><br>
  <textarea name="description" required>{{recipe.description}}</textarea><br><br>
  <textarea name="instructions" required>{{recipe.instructions}}</textarea><br><br>

  <select name="categoryId" required>
    {{#each categories}}
      <option value="{{id}}" {{#if (eq id ../recipe.categoryId)}}selected{{/if}}>{{name}}</option>
    {{/each}}
  </select><br><br>

  <h4>Ingredients</h4>
  <div id="ingredients">
    {{#each recipe.ingredients}}
      <input type="text" name="ingredients[]" value="{{name}}" required><br>
    {{/each}}
  </div>

  <button type="submit">Save Changes</button>
</form>

<a href="/recipes/{{recipe.id}}">‚Üê Back to Recipe</a>
