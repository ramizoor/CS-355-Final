<h1>All Recipes</h1>

<nav>
  {{#if logged_in}}
    <a href="/logout">Logout</a> |
    <a href="/users/profile">My Profile</a> |
    <a href="/recipes/create">Create Recipe</a>
  {{else}}
    <a href="/login">Login</a> |
    <a href="/register">Register</a>
  {{/if}}
</nav>

<!-- Search bar -->
<form method="GET" action="/recipes" style="margin: 20px 0;">
  <input type="text" name="q" placeholder="Search recipes..." value="{{query}}" style="padding: 5px; width: 250px;">
  <button type="submit">Search</button>
</form>

<hr>

<ul>
  {{#each recipes}}
    <li>
      <h3><a href="/recipes/{{id}}">{{title}}</a></h3>
      <p>{{description}}</p>
      <p><strong>By:</strong> {{user.name}} | <strong>Category:</strong> {{category.name}}</p>
    </li>
    <hr>
  {{/each}}
</ul>
